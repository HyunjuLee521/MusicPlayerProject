<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hj2.user.musicplayerproject.activities.EditPlaylistActivity">


    <fragment
        android:id="@+id/edit_playlist_frag"
        android:name="com.hj2.user.musicplayerproject.fragments.EditPlaylistFragments.EditPlaylistFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:layout="@layout/edit_playlist_fragment" />

    <fragment
        android:id="@+id/edit_controller_frag"
        android:name="com.hj2.user.musicplayerproject.fragments.EditPlaylistFragments.EditControllerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/edit_controller_fragment" />


</LinearLayout>
